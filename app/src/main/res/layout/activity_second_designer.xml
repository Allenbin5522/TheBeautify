<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/description_layout"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <ImageView
        android:id="@+id/return_designer_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_circle_back_normal" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_designer_second"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:src="@mipmap/ic_launchera" />

    <TextView
        android:id="@+id/tv_design_second_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/civ_designer_second"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="name"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_design_second_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_design_second_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="label" />

    <TextView
        android:id="@+id/tv_design_second_attention"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_design_second_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_designer"
        android:gravity="center"
        android:text="+关注"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_design_second_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_design_second_attention"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="description"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>
    <ImageView
        android:id="@+id/expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/comment_backb"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>